<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval" android:thickness="1dp">
            <stroke
                android:width="1dp"
                android:color="@color/gray_light" />

        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="oval">
            <solid
                android:width="1dp"
                android:color="@color/bluePrimary" />
            <size
                android:width="@dimen/block_medium_margin"
                android:height="@dimen/block_medium_margin" />
        </shape>
    </item>
</layer-list>