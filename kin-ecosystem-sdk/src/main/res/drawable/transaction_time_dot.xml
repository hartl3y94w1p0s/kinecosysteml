<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval" android:thickness="@dimen/stroke_width">
            <solid android:color="@color/white"/>
            <stroke
                android:width="@dimen/stroke_width"
                android:color="@color/gray_light" />

        </shape>
    </item>
    <item
        android:bottom="@dimen/stroke_padding"
        android:left="@dimen/stroke_padding"
        android:right="@dimen/stroke_padding"
        android:top="@dimen/stroke_padding">
        <shape android:id="@+id/center_dot" android:shape="oval">
            <solid
                android:width="@dimen/stroke_width"
                android:color="@color/bluePrimary" />
            <size
                android:width="@dimen/block_medium_margin"
                android:height="@dimen/block_medium_margin" />
        </shape>
    </item>
</layer-list>