<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/time_line_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_margin"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.kin.ecosystem.history.view.KinDashView
            android:id="@+id/first_dash_line"
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:src="@drawable/transaction_time_path"
            app:color="@color/gray_light"
            app:orientation="vertical"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/dot"
            android:layout_width="@dimen/main_margin"
            android:layout_height="@dimen/main_margin"
            android:src="@drawable/transaction_time_dot"
            tools:ignore="MissingConstraints" />

        <com.kin.ecosystem.history.view.KinDashView
            android:id="@+id/sec_dash_line"
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:src="@drawable/transaction_time_path"
            app:color="@color/gray_light"
            app:orientation="vertical"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/title_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/main_small_margin"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            style="@style/KinecosysTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spotify - tap to reveal your code"
            tools:text="Spotify - tap to reveal your code" />

        <TextView
            android:id="@+id/sub_title"
            style="@style/KinecosysSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed poll - 23.1.18"
            tools:text="Completed poll - 23.1.18" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/amount_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/main_margin"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/amount_ico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/invoice"
            tools:src="@drawable/invoice" />

        <TextView
            android:id="@+id/amount_text"
            style="@style/KinecosysTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-8,000"
            tools:text="-8,000" />

    </LinearLayout>

</LinearLayout>